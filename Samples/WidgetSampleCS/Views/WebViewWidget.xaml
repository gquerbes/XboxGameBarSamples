<Page
    x:Class="WidgetSampleCS.WebViewWidget"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:WidgetSampleCS"
     xmlns:sys="using:System"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="Transparent" 
    mc:Ignorable="d">
    <Page.Resources>
        <local:ColorConverter x:Key="ColorConverter"/>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:VisibilityInverter x:Key="VisibilityInverter"/>
    </Page.Resources>

    <Grid Background="Transparent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <WebView Name="primaryWebView" DefaultBackgroundColor="Transparent" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Column="0" Grid.Row="0" />
        <WebView Name="secondWebView" DefaultBackgroundColor="Transparent"  Visibility="{x:Bind primaryWebView.Visibility, Mode=OneWay, Converter={StaticResource VisibilityInverter}}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Column="0" Grid.Row="0"/>
    </Grid>
    


</Page>
