<Page
    x:Class="WidgetSampleCS.SettingsWidget"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:WidgetSampleCS"
     xmlns:sys="using:System"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="Transparent" 
    mc:Ignorable="d">
    <Page.Resources>
        <local:ColorConverter x:Key="ColorConverter"/>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Page.Resources>


    <StackPanel>
        <TextBlock Text="Enter Script Here"/>
        <RichEditBox  x:Name="TextBox" Height="150"/>
        <Button Click="DoneButton_Click" Content="Save HTML"/>
        <ToggleSwitch x:Name="Toggle" IsOn="{x:Bind ViewModel.AutoRefresh, Mode=TwoWay}"  Header="Auto Refresh" />
        <TextBlock Text="Auto Update Interval (seconds)"/>
        <TextBox Text="{x:Bind ViewModel.RefreshInterval, Mode=TwoWay}" IsEnabled="{x:Bind Toggle.IsOn, Mode=OneWay}" Width="75" HorizontalAlignment="Left"/>
    </StackPanel>
    

</Page>
